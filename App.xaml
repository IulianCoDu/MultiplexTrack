<Application
    x:Class="MultiplexTrack.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultiplexTrack"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:MultiplexTrack.ViewModel"
    StartupUri="View/MainWindowView.xaml"
    mc:Ignorable="d">

    <Application.Resources>

        <!--  Global View Model Locator  -->
        <viewmodel:ViewModelLocator x:Key="Locator" d:IsDataSource="True" />

        <!--  Text Block  -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Light" />
            <Setter Property="FontSize" Value="20" />
        </Style>
        <!--  Text Box  -->
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI Light" />
            <Setter Property="FontSize" Value="15" />
        </Style>

        <ImageBrush
            x:Key="RowBackgrondImage"
            ImageSource="OldSchoolCinema.jpg"
            Opacity="1"
            Stretch="Fill"
            TileMode="Tile" />

    </Application.Resources>

</Application>
