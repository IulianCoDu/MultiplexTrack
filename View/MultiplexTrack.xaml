<Page
    x:Class="MultiplexTrack.View.MultiplexTrack"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultiplexTrack.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MultiplexTrack"
    d:DesignHeight="400"
    d:DesignWidth="400"
    DataContext="{Binding MultiplexTrackModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Grid>
        <!--  Column and Row Definition  -->
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Width="180"
            Height="47"
            Margin="10,10,10,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Text="Welcome"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <Image
            Grid.RowSpan="2"
            Grid.ColumnSpan="4"
            Width="380"
            Height="114"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="OldSchoolCinema.jpg"
            StretchDirection="UpOnly" />


    </Grid>
</Page>
